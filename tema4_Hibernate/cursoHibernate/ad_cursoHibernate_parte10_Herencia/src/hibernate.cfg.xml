<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- parametros para la conexion a la base de datos -->
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost/hibernateHerencia</property>
    <property name="connection.username">root</property>
    <property name="connection.password">9874</property>
    
    <!-- Configuracion del pool interno -->
    <property name="connection.pool_size">1</property>

    <!-- Dialecto de la base de datos -->
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

    <!-- Otras propiedades importantes -->
    <property name="show_sql">true</property>
    <!-- Para crear las tablas o si se quiere borrar todo en cada ejecuciÃ³n -->
    <property name="hbm2ddl.auto">create-drop</property> 
    <!-- Actualiza datos, pero no borra lo anterior -->
    <!-- <property name="hbm2ddl.auto">update</property>  -->

    <!-- <property name="hbm2ddl.auto">none</property> -->

    <!-- Aqui iran los archivos de mapeo -->
    <mapping class="modelo.dto.Persona"/>
    <mapping class="modelo.dto.Normal"/>
    <mapping class="modelo.dto.Tecnologo"/>
    <mapping class="modelo.dto.Programador"/>
    <mapping class="modelo.dto.Tester"/>
  </session-factory>
</hibernate-configuration>
